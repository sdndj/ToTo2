<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ccffff"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Game_Story1_Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout2"
        android:layout_centerVertical="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/money"
                    android:textColor="#ff9900"
                    android:text="0"
                    android:textSize="15pt"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/textview" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textColor="#000000"
                    android:textSize="15pt"
                    android:id="@+id/textview"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/kakaolink_btn_medium"
                android:id="@+id/shared_btn" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout3"
            android:layout_weight="1"
            android:layout_alignEnd="@+id/textview"
            android:id="@+id/linearLayout4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="선택 : "
                android:textColor="#000000"
                android:textSize="10pt"
                android:id="@+id/textView"
                android:layout_below="@+id/money"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/select"
                android:textSize="10pt"
                android:layout_alignBottom="@+id/textView"
                android:layout_toEndOf="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="결과 : "
                android:textColor="#000000"
                android:textSize="10pt"
                android:id="@+id/textView2"
                android:layout_alignBottom="@+id/select"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/result"
                android:textSize="10pt"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toEndOf="@+id/textView2" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="홀/짝을 선택 후 투자를 눌러주세요."
            android:textColor="#ff0000"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_above="@+id/down_button"
            android:layout_alignEnd="@+id/textview"
            android:id="@+id/linearLayout3">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="홀"
                android:textSize="10pt"
                android:id="@+id/free_hole"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="짝"
                android:textSize="10pt"
                android:id="@+id/free_jjack"
                android:layout_below="@+id/button"
                android:layout_centerHorizontal="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/linearLayout"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="10000원\n투자"
                android:textSize="10pt"
                android:id="@+id/free_button_10000"
                android:layout_above="@+id/button"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="50000원\n투자"
                android:textSize="10pt"
                android:id="@+id/free_button_50000"
                android:layout_above="@+id/button2"
                android:layout_toEndOf="@+id/button_1000" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="10만원\n투자"
                android:textSize="10pt"
                android:id="@+id/free_button_100000"
                android:layout_above="@+id/button2"
                android:layout_toEndOf="@+id/button_5000" />
        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/all"
            android:textSize="10pt"
            android:id="@+id/free_all_btn" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@mipmap/reset"
            android:textColor="#ff0000"
            android:textSize="10pt"
            android:id="@+id/free_clear_btn"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/button2" />

    </LinearLayout>

</RelativeLayout>
